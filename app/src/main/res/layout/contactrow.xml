<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageRow"
        android:layout_width="395dp"
        android:layout_height="294dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/imageHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageRow"
        app:srcCompat="@drawable/ic_heart_svgrepo_com" />

    <ImageView
        android:id="@+id/imageComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageHeart"
        app:layout_constraintStart_toEndOf="@+id/imageHeart"
        app:layout_constraintTop_toTopOf="@+id/imageHeart"
        app:srcCompat="@drawable/ic_message_svgrepo_com" />

    <ImageView
        android:id="@+id/imageSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageHeart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageComment"
        app:layout_constraintTop_toTopOf="@+id/imageHeart"
        app:srcCompat="@drawable/ic_send_svgrepo_com" />

    <TextView
        android:id="@+id/textLike"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="280dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHeart" />

    <TextView
        android:id="@+id/textUser"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLike" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="250dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textUser"
        app:layout_constraintTop_toTopOf="@+id/textUser" />

    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="250dp"
        android:text="Me gusta"
        app:layout_constraintBottom_toBottomOf="@+id/textLike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textLike"
        app:layout_constraintTop_toTopOf="@+id/textLike" />

</androidx.constraintlayout.widget.ConstraintLayout>